#!/bin/bash
#
# Author   : Gaston Gonzalez
# Date     : 11 October 2024
# Purpose  : A script for managaing plug-and-play radios

function usage() {
  echo "Usage: $(basename $0) <command>"
  echo "  list - list supported radios" 
  echo "  set  - set radio as active" 
  echo "  show - show active radion" 
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

case $1 in
  list)
    echo "Implement me"
    ;;
  set)
    echo "Implement me"
    ;;
  show)
    echo "Implement me"
    ;;
  *)
    echo "Command not supported."
    usage
    exit 1
    ;;
esac
